CC := gcc

CP = $(CC)

SRC = main.c school.c 

OBJ := $(SRC:.c=.o)

OB = $(OBJ)

NAME = school

RM = rm -f

CFLAGS := -Wall -Werror -Wextra -pedantic

FLAGS = $(CFLAGS)

all: $(NAME)

%.o: %.c
	$(CC) $(FLAGS) -c $< -o $@

$(NAME): $(OB)
	$(CP) $(OB) -o $(NAME)

clean:
	$(RM) $(NAME) *~ *.~ *.swp *.swn *.swo

oclean:
	$(RM) $(OB)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
