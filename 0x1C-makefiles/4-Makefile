CC = gcc

SRC = main.c school.c 

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *~ *.~ *.swp *.swn *.swo

oclean:
	$(RM) $(OBJ)

fclean:
	clean oclean

re:
	fclean all

.PHONY: all clean oclean fclean re
