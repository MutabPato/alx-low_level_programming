#include "main.h"

/**
 *_strncpy - check the code
 *@dest: pointer
 *@src: pointer
 *@n: parameter
 * Return: Always 0.
 */
char *_strncpy(char *dest, char *src, int n)
{
char *result = dest;
while (*src != '\0' && n > 0)
{
*dest = *src;
dest++;
src++;
n--;
}
while (n > 0)
{
dest = '\0';
src++;
n--;
}
return (result);
}
